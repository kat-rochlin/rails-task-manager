<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <input type="checkbox" onclick='return false' <%= task.completed == true ? "checked" : "unchecked"%>>
  <button><%= link_to "Delete", task_path(task), method: :delete %></button>
  <hr>
<% end %>

<%= link_to "Create a new task", new_task_path %>
